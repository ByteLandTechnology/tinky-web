  "keywords": [
    "react",
    "tinky",
    "xterm",
    "terminal"
  ],
  "homepage": "https://github.com/ByteLandTechnology/tinky-web",
  "bugs": {
    "url": "https://github.com/ByteLandTechnology/tinky-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ByteLandTechnology/tinky-web.git"
  },
  "license": "MIT",
  "author": {
    "name": "ByteLand Technology Limited"
  },
  "type": "module",
  "files": [
    "./lib/*"
  ],
  "main": "./lib/index.js",
